{
  "name": "mobile-island",
  "version": "1.0.1",
  "description": "A CLI rowing game built with React Ink",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build:macos": "bun build src/index.tsx --compile --outfile ./dist/row-kirat-row --minify --define process.env.NODE_ENV='\"production\"'",
    "release": "gh release create v$npm_package_version --title \"Mobile Island v$npm_package_version\" ./dist/row-kirat-row"
  },
  "dependencies": {
    "ink": "^5.2.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@types/react": "^18.2.45",
    "react-devtools-core": "^4.28.5",
    "typescript": "^5.3.3"
  }
}