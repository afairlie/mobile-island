{
  "name": "cli-game",
  "version": "1.0.0",
  "description": "A CLI rowing game built with React Ink",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cli-game": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target node",
    "build:macos": "bun build src/index.tsx --compile --outfile row-kirat-row --minify --define process.env.NODE_ENV='\"production\"'",
    "start": "bun run dist/index.js"
  },
  "keywords": [
    "cli",
    "game",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ink": "^5.2.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@types/react": "^18.2.45",
    "react-devtools-core": "^4.28.5",
    "typescript": "^5.3.3"
  }
}
